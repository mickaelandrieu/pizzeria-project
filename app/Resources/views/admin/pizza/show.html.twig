{% extends 'base.html.twig' %}
{% import "::macros/common.html.twig" as common %}

{% block body %}
    <h1>Pizza</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pizza.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pizza.name }}</td>
            </tr>
                <tr>
                <th>Ingredients</th>
                <td>{{ common.listIngredients(pizza.ingredients)}}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pizza_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pizza_edit', { 'id': pizza.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
