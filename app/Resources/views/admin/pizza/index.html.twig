{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pizza list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pizza in pizzas %}
            <tr>
                <td><a href="{{ path('pizza_show', { 'id': pizza.id }) }}">{{ pizza.id }}</a></td>
                <td>{{ pizza.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('pizza_show', { 'id': pizza.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('pizza_edit', { 'id': pizza.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pizza_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
